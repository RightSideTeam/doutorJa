<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/branco"
    tools:context=".fragment.PerfilFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:contentDescription="@string/todo"
        android:background="@color/colorAccent"
        android:src="@drawable/barraperfil"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/nomeperfilimage"
            android:layout_width="65dp"
            android:layout_height="60dp"
            android:layout_marginBottom="125dp"
            app:srcCompat="@drawable/iconeusuario" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nomeperfil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Nome:"
                android:textColor="@color/cinza2"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/nome_perfil_usuario"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textColor="@color/cinza2"
                android:textSize="13sp" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/emailperfilimage"
            android:layout_width="65dp"
            android:layout_height="60dp"
            android:layout_marginBottom="125dp"
            app:srcCompat="@drawable/iconeemail" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/emailperfiltext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="E-mail:"
                android:textColor="@color/cinza2"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/emailperfiltext2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/userName"
                android:layout_alignStart="@+id/userName"
                android:layout_below="@+id/emailUser"
                android:textColor="@color/cinza2"
                android:textSize="13sp" />

        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/button_profissional_entrarNoLogin"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_gravity="end"
        android:layout_marginRight="15dp"
        android:background="#15BDB2"
        android:text="@string/profissional_entre"
        android:textColor="@color/branco"
        android:textSize="12sp"
        android:textStyle="bold" />



</LinearLayout>