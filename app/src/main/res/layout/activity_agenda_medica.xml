<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.AgendaMedicaActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:contentDescription="@string/todo"
        android:background="@color/colorAccent"
        android:src="@drawable/barraagenda"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">


            <Button
                android:id="@+id/buttonParaOMinicurso"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:background="@drawable/button_entrar"
                android:gravity="center"
                android:text="MINICURSOS"
                android:textColor="@color/branco"
                android:layout_marginRight="20dp"
                android:textSize="15sp" />


        <Button
            android:id="@+id/buttonParaMontarAgenda"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:background="@drawable/button_entrar"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:text="Meus Horarios"
            android:textColor="@color/branco"
            android:textSize="15sp" />

    </LinearLayout>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sua_agenda"
        android:layout_marginLeft="10dp"
        android:textColor="#000"
        android:textSize="17sp"
        android:textStyle="bold"/>


    <ListView
        android:id="@+id/listViewAgenda_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewMinhaAgenda">

    </ListView>

</LinearLayout>

