<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardview_especialidade_id"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="85dp"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_margin="4dp"
    cardview:cardCornerRadius="4dp"
    android:background="@color/colorAccent"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/branco"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/especialidade_imagem_id"
            android:layout_gravity="center"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:contentDescription="TODO"
            android:scaleType="centerCrop"
            android:src="@drawable/novoiconeenfermagem" />

        <TextView
            android:id="@+id/especialidade_nome_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/branco"
            android:gravity="center"
            android:text="@string/nome_da_especialidade"
            android:textColor="@color/cinza2"
            android:textSize="21sp" />


    </LinearLayout>


</android.support.v7.widget.CardView>